<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.eslam.myplayground.LandingPage.TcDetails.TcDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vfg_tc_details_card_margin_bottom"
            android:layout_marginEnd="@dimen/vfg_tc_details_card_horizontal_margin"
            android:layout_marginStart="@dimen/vfg_tc_details_card_horizontal_margin"
            android:layout_marginTop="@dimen/vfg_tc_details_card_margin_top"
            app:cardElevation="@dimen/vfg_tc_details_card_elevation">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/vfg_tc_details_layout_margin_end"
                android:layout_marginStart="@dimen/vfg_tc_details_layout_margin_start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/copyrightsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vfg_tc_details_copyrights_margin_top"
                    android:gravity="left"
                    tools:text="Â© Copyright 2015 My Vodafone 5.0.1"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vfg_tc_details_view_height"
                    android:layout_marginBottom="@dimen/vfg_tc_details_view_margin_bottom"
                    android:layout_marginTop="@dimen/vfg_tc_details_view_margin_top"
                    android:alpha="0.1"
                    android:background="#000000" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
