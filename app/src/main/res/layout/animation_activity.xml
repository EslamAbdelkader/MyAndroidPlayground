<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eslam.myplayground.AnimationActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/cardview_dark_background"
        android:src="@drawable/vfg_tc_telephone"
        android:layout_centerInParent="true"/>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/view"
        />

    <com.example.eslam.myplayground.custom.Circle
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/myCircle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circlePlus"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Plus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleMinus"
        android:layout_below="@+id/circlePlus"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Minus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleQuarter"
        android:layout_below="@+id/circlePlus"
        android:layout_marginTop="20dp"
        android:text="Quarter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleFull"
        android:layout_below="@+id/circlePlus"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:text="Full"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleZero"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:text="Zero"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleHalf"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:text="Half"/>

</RelativeLayout>
